<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.asatia.roomies.EditBillFragment">

    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/bill">
        <TextView
            android:text="View Bill"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/billDate"
        android:layout_below="@id/bill"
        android:layout_marginTop="32dp"
        android:hint="Enter Bill Date"
        style="@style/inputText"
        android:editable="false"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/date_icon"
        android:layout_alignBottom="@id/billDate"/>
    <EditText
        android:id="@+id/billAmount"
        android:layout_below="@id/billDate"
        android:layout_marginTop="8dp"
        android:hint="Enter Bill Amount"
        style="@style/inputText"
        android:editable="false"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/dolar_o"
        android:layout_alignBottom="@id/billAmount"/>
    <EditText
        android:id="@+id/billShop"
        android:layout_below="@id/billAmount"
        android:layout_marginTop="8dp"
        android:hint="Enter the Shop name"
        style="@style/inputText"
        android:editable="false"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/shop"
        android:layout_alignBottom="@id/billShop"/>

    <EditText
        android:id="@+id/billPayer"
        android:layout_below="@id/billShop"
        android:layout_marginTop="8dp"
        android:hint="Enter Bill Payer"
        style="@style/inputText"
        android:editable="false"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/payer"
        android:layout_alignBottom="@id/billPayer"/>

    <EditText
        android:id="@+id/billShare"
        android:layout_below="@id/billPayer"
        android:layout_marginTop="8dp"
        android:hint="Enter Bill Sharer"
        style="@style/inputText"
        android:editable="false"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/share"
        android:layout_alignBottom="@id/billShare"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editBillBackButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/backc"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/editBillButton"
        style="@style/okButton"
        app:backgroundTint="@color/buttonColor"/>
</RelativeLayout>
