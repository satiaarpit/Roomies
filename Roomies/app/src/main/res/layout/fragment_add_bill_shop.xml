<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asatia.roomies.AddBillShopFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/nameMain">
        <TextView
            android:text="Shop"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/Shop"
        android:layout_below="@id/nameMain"
        android:layout_marginTop="48dp"
        android:hint="Enter the Shop Name"
        android:text=""
        style="@style/inputText"
        android:focusable="true"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/date_icon"
        android:layout_alignBottom="@id/Shop"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveShop"
        style="@style/okButton"
        app:backgroundTint="@color/buttonColor"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backButtonShop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/backc"
        />

</RelativeLayout>
