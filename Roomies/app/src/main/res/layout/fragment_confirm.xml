<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asatia.roomies.AddBillAmountFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/confirmMain">
        <TextView
            android:text="Confirm"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm"
        android:hint="Are you sure you want to settle amounts? "
        android:layout_marginTop="56dp"
        android:layout_below="@id/confirmMain"
        style="@style/inputText"
        android:focusable="true"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/checkcircle"
        android:layout_alignTop="@id/confirm"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/yesButton"
        style="@style/okButton"
        android:src="@drawable/check"
        app:backgroundTint="@color/buttonColor"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/noButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/no"
        />

</RelativeLayout>
