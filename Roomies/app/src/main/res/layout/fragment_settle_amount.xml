<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asatia.roomies.SettleAmountFragment">

    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/settleMain">
        <TextView
            android:text="Settle"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <TextView
        style="@style/inputText"
        android:layout_marginTop="40dp"
        android:layout_below="@id/settleMain"
        android:id="@+id/arpitAmount"
        />
    <TextView
        style="@style/inputText"
        android:id="@+id/niravAmount"
        android:layout_below="@id/arpitAmount"
        />
    <TextView
        style="@style/inputText"
        android:id="@+id/rutvijAmount"
        android:layout_below="@id/niravAmount"
        />
    <TextView
        style="@style/inputText"
        android:id="@+id/utsavAmount"
        android:layout_below="@id/rutvijAmount"
        />
    <TextView
        style="@style/inputText"
        android:id="@+id/valmikAmount"
        android:layout_below="@id/utsavAmount"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settle"
        style="@style/okButton"
        app:backgroundTint="@color/buttonColor"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:backgroundTint="@color/buttonColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/backb"
        />
</RelativeLayout>
