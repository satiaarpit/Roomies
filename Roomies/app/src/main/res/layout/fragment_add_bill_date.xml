<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asatia.roomies.AddBillDateFragment">

    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/dateMain">
        <TextView
            android:text="Date"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/Date"
        android:layout_below="@id/dateMain"
        android:layout_marginTop="48dp"
        android:hint="Select a Date"
        style="@style/inputText"
        />
    <ImageView
        style="@style/imageStyle"
        android:src="@drawable/date_icon"
        android:layout_alignBottom="@id/Date"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveDate"
        style="@style/okButton"
        app:backgroundTint="@color/buttonColor"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backButtonDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/backc"
        />
</RelativeLayout>