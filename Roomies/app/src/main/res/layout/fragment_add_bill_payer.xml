<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asatia.roomies.AddBillPayerFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        style="@style/mainLayout"
        android:id="@+id/payerMain">
        <TextView
            android:text="Payer"
            style="@style/titleStyle"
            />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/savePayer"
        style="@style/okButton"
        app:backgroundTint="@color/buttonColor"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_below="@id/payerMain"
        android:layout_height="wrap_content"
        android:id="@+id/Payer"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="48dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:text="Arpit"
            android:textSize="20dp"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/arpit"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nirav"
            android:padding="12dp"
            android:id="@+id/nirav"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:text="Rutvij"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="12dp"
            android:id="@+id/rutvij"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:text="Utsav"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="12dp"
            android:id="@+id/utsav"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:text="Valmik"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/valmik"/>
    </RadioGroup>
    <ImageView
        style="@style/imageStyle"
        android:id="@+id/image"
        android:src="@drawable/date_icon"
        android:layout_marginTop="150dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/backButtonPayer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/backc"
        />
</RelativeLayout>
